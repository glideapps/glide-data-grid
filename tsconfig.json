{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "strict": true,
      "moduleResolution": "node",
      "target": "es6",
      "jsx": "react",
      "baseUrl": "./src",
      "typeRoots": ["./node_modules/@types"],
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}