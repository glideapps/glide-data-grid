{
    "extends": "../../tsconfig.json",
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": [
        "./src/**/*.stories.tsx",
        "./src/stories/*.tsx",
        "./src/docs/*.tsx",
        "./test/**/*.test.ts",
        "./test/**/*.test.tsx",
        "./src/**/stories/"
    ],
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist/esm",
        "declarationDir": "./dist/dts",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "types": ["node"]
    }
}
