{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist/ts",
        "declaration": true,
        "incremental": false,
        "composite": false,
        "types": ["react", "jest"],
        "isolatedModules": false,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "noEmit": false,
        "allowJs": false,
        "emitDeclarationOnly": true,
        "sourceMap": false
    },
    "exclude": ["./src/**/*.stories.tsx", "./src/stories/*.tsx", "./src/docs/*.tsx", "./src/setupTests.ts",]
}
