{
    "extends": "../../tsconfig.json",
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": [
        "./src/**/*.stories.tsx",
        "./src/stories/*.tsx",
        "./src/docs/*.tsx",
        "./src/setupTests.ts",
        "./test/**/*.test.ts",
        "./test/**/*.test.tsx"
    ],
    "references": [{ "path": "../core" }],
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist/cjs",
        "declarationDir": "./dist/dts",
        "module": "CommonJS",
        "verbatimModuleSyntax": false,
        "sourceMap": true
    }
}
