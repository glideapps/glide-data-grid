{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "strict": true,
        "target": "ES6",
        "lib": ["DOM", "ES6", "ES2017"],
        "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
